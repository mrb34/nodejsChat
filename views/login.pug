extends layoutCustomised

block content 
  // Outer Row
  .row.justify-content-center
    .col-xl-10.col-lg-12.col-md-9
      .card.o-hidden.border-0.shadow-lg.my-5
        .card-body.p-0
          // Nested Row within Card Body
          .row
            .col-lg-6.d-none.d-lg-block.bg-login-image
            .col-lg-6
              .p-5
                .text-center
                  h1.h4.text-gray-900.mb-4 Welcome Back!
                form.user(method='POST',action='/users/login')                
                  .form-group
                    input.form-control.form-control-user(name='email',type='email', aria-describedby='emailHelp', placeholder='Enter Email Address...')
                  .form-group
                    input.form-control.form-control-user(name='password',type='password', placeholder='Password')
                  .form-group
                    .custom-control.custom-checkbox.small
                      input#customCheck.custom-control-input(type='checkbox')
                      label.custom-control-label(for='customCheck') Remember Me
                      
                  input.btn.btn-primary.btn-user.btn-block(type='submit',value='Login')                                   
                hr
                .text-center
                  a.small(href='forgot-password.html') Forgot Password?
                .text-center
                  a.small(href='/users/register') Create an Account!
